#!/bin/bash

# -C                 : uses compression transfer (sometimes slower)
# -o allow_other     : allow non-root read/write access
# -o follow_symlinks : Speaks for itself
# -p                 : Port

echo "[*] Mounting SSH to $HOME/Mounts/server/"
sudo sshfs -o Compression=no                                \
           -o IdentityFile=$HOME/.ssh/id_rsa                \
           -o allow_other                                   \
           -o follow_symlinks                               \
           -C                                               \
           -p $bigbnka_port                                 \
           $bigbnka_user@$bigbnka_ip:/home/$bigbnka_user/   \
           $HOME/Mounts/server/
